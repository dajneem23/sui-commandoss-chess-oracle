{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            {
                "include": "data",
                "outDir": "dist/"
            },
            {
                "include": "config",
                "outDir": "dist/"
            }
        ],
        "deleteOutDir": true,
        "builder": {
            "deleteOutDir": true,
            "type": "tsc"
        },
        "tsConfigPath": "./tsconfig.build.json"
    }
}
